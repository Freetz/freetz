$(PKG)_CONFIGURE_OPTIONS += \
	--disable-cups \
	--disable-fam \
	--disable-iprint \
	--disable-pie \
	--with-configdir=/mod/etc/samba \
	--with-included-popt=no \
	--with-logfilebase=/var/log \
	--with-piddir=/var/run \
	--with-privatedir=/mod/etc/samba \
	--with-syslog \
	--without-acl-support \
	--without-ads \
	--without-cifsmount \
	--without-cifsupcall \
	--without-cluster-support \
	--without-krb5 \
	--without-ldap \
	--without-sendfile-support \
	--without-sys-quotas \
	--without-utmp \
	--without-winbind
