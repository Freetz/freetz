config FREETZ_PACKAGE_OPENSSL
	bool "OpenSSL (binary only)"
	default n
	select FREETZ_LIB_libdl
	select FREETZ_LIB_libcrypto
	select FREETZ_LIB_libssl
	select FREETZ_OPENSSL_VERSION_PROMPT
	help
		This package contains the OpenSSL command-line utility.

config FREETZ_PACKAGE_OPENSSL_TRACE
	bool "SSL server/client trace output option"
	default n
	depends on FREETZ_PACKAGE_OPENSSL && FREETZ_OPENSSL_VERSION_1_LTS
	help
		build OpenSSL binary with SSL trace support available
		since version 1.0.2
