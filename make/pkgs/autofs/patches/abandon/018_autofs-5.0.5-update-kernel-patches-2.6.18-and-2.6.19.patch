++static int autofs_dev_ioctl_open_mountpoint(const char *path, dev_t devid)
++{
++	struct file *filp;
++	struct nameidata nd;
++	int err, fd;
++
++	fd = get_unused_fd();
++	if (likely(fd >= 0)) {
++		/* Get nameidata of the parent directory */
++		err = path_lookup(path, LOOKUP_PARENT, &nd);
++		if (err)
++			goto out;
