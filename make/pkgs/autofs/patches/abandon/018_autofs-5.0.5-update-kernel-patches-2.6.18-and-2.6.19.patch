++	mutex_lock(&sbi->wq_mutex);
++	if (!sbi->catatonic) {
++		mutex_unlock(&sbi->wq_mutex);
++		return -EBUSY;
++	} else {
++		struct file *pipe = fget(pipefd);
++		if (!pipe->f_op || !pipe->f_op->write) {
++			err = -EPIPE;
++			fput(pipe);
++			goto out;
++		}
++		sbi->oz_pgrp = process_group(current);
++		sbi->pipefd = pipefd;
++		sbi->pipe = pipe;
++		sbi->catatonic = 0;
++	}
++out:
++	mutex_unlock(&sbi->wq_mutex);
++	return err;
