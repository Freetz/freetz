# Stage 3: Common definitions after BIN/LIB specific definitions
define PKG_INIT__INT3
$(PKG)_DEST_BIN:=$($(PKG)_DEST_DIR)/bin
$(PKG)_DEST_SBIN:=$($(PKG)_DEST_DIR)/sbin
$(PKG)_DEST_LIB:=$($(PKG)_DEST_DIR)/lib
