	-e 's,('"$(dir $<)"'lib[a-zA-Z]([a-zA-Z0-9_+-])*)[.]so([.][0-9]+)*$$$$,\1.so*'"$(if $2, \1.$2)"',g' \
) $(dir $@);
endef
