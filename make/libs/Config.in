config FREETZ_LIB_libdevmapper
	bool "devmapper (libdevmapper.so)"
	default n
	help
		Device-mapper library.

config FREETZ_LIB_libfreetz
	bool "libfreetz (libfreetz.so)"
	default n
	help
		This is Freetz compatibility library which overwrites functions of AVM's libraries, e.g. write_etc_passwd.

config FREETZ_LIB_libpcre 
	bool "pcre (libpcre.so)"
	default n
	help
		A Perl Compatible Regular Expression library

config FREETZ_LIB_libpcreposix
	bool "posix wrapper to pcre (libpcreposix.so)"
	select FREETZ_LIB_libpcre
	default n
	help
		A POSIX wrapper interface to the Perl Compatible Regular Expression library
