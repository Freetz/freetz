	bool "Use a snapshot of gcc-major-version selected above"
	depends on FREETZ_REAL_DEVELOPER_ONLY \
		&& (FREETZ_TARGET_GCC_4_8 || FREETZ_TARGET_GCC_4_9) && (FREETZ_BUILD_TOOLCHAIN || FREETZ_DL_TOOLCHAIN_OVERRIDE)

