		depends on FREETZ_KERNEL_VERSION_2_6_32_MAX

	config FREETZ_KERNEL_BINUTILS_2_23
		bool "binutils-2.23.2"
		depends on FREETZ_AVM_GCC_4_6_MIN
		depends on FREETZ_KERNEL_VERSION_2_6_32_MAX
