						( \
						FREETZ_TARGET_UCLIBC_0_9_29 || \
						FREETZ_TARGET_UCLIBC_0_9_32 || \
						FREETZ_TARGET_UCLIBC_0_9_33 || \
						FREETZ_TARGET_UCLIBC_1         \
